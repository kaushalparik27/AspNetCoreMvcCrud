@model AspNetCoreMvcCrud.Data.Models.Employee

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.EmpName
        </dd>

        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Model.Position
        </dd>

        <dt class="col-sm-2">
            Office
        </dt>
        <dd class="col-sm-10">
            @Model.Office
        </dd>

        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.Salary
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
